@model Album
@{
    ViewBag.Title = "专辑明细";
}

<form>
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <img src="@Model.CoverUrl" alt="@Model.Title" style="height: 300px; width: 300px;" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Title"></label>
        <div class="col-sm-10">
            <input readonly class="form-control-plaintext" asp-for="Title">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Artist"></label>
        <div class="col-sm-10">
            <input readonly class="form-control-plaintext" asp-for="Artist">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Price"></label>
        <div class="col-sm-10">
            <input readonly class="form-control-plaintext" asp-for="Price">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="ReleaseDate"></label>
        <div class="col-sm-10">
            <input readonly class="form-control-plaintext" asp-for="ReleaseDate">
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-secondary">返回列表</a>
        </div>
    </div>
</form>

